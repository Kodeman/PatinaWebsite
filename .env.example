# Patina Website Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SITE CONFIGURATION
# ===========================================

# Public URL of your deployed site
NEXT_PUBLIC_SITE_URL=https://patina.design

# ===========================================
# SANITY CMS
# ===========================================

# Your Sanity project ID (find at sanity.io/manage)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id

# Sanity dataset name (usually "production")
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API version (use current date format)
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API token for preview/draft mode (keep secret!)
# Generate at sanity.io/manage > API > Tokens (select "Viewer" role)
SANITY_API_READ_TOKEN=

# Webhook secret for on-demand cache revalidation
# Generate a secure random string and use the same value in Sanity webhook config
SANITY_WEBHOOK_SECRET=

# Preview secret for enabling draft mode from Sanity Studio
# Generate a secure random string
SANITY_PREVIEW_SECRET=

# ===========================================
# ANALYTICS
# ===========================================

# Vercel Analytics and Speed Insights are automatically enabled
# when deployed to Vercel - no additional configuration needed
